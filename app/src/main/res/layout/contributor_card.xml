<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/gray"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">


        <!-- Contributor Name -->
        <TextView
            android:id="@+id/contributor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contributor_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- GitHub Button -->
        <ImageButton
            android:id="@+id/github_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="GitHub"
            android:src="@drawable/ic_github_logo"
            android:visibility="gone"
            android:layoutDirection="ltr"
            tools:ignore="HardcodedText" />

        <!-- LinkedIn Button -->
        <ImageButton
            android:id="@+id/linkedin_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="LinkedIn"
            android:src="@drawable/ic_linkedin_logo"
            android:visibility="gone"
            android:layoutDirection="ltr"
            tools:ignore="HardcodedText" />

        <!-- Telegram Button -->
        <ImageButton
            android:id="@+id/telegram_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Telegram"
            android:src="@drawable/ic_telegram_logo"
            android:visibility="gone"
            android:layoutDirection="ltr"
            tools:ignore="HardcodedText" />
</LinearLayout>
</androidx.cardview.widget.CardView>